!!!
%html
  %head
    %link(rel="stylesheet" href="/css/normalize.css" type="text/css")
    %link(rel="stylesheet" href="/css/screen.css" type="text/css")
    %link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" type="text/css")
    %script(src="/js/moment.min.js")
    %script(src="/js/jquery-1.9.1.min.js")
    %script(src="/js/knockout-2.2.1.js")
    %script(src="/js/tokei.js")
    %script(src="/js/jquery.imagesloaded.min.js")
    :css
      body { background-color: #000; color: #fff; }

  %body
    .tokei-wrapper
      .tokei-box
        %img.tokei-image(data-bind="attr: {src: url}")
        .tokei(data-bind="style: {color: color, fontSize: size, top: top, left: left}")
          %span(data-bind="text: hour")
          %span(data-bind="css: colonClass")<>:
          %span(data-bind="text: minute")
